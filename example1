echo "enter the file_name"
read file_name
if [ -e "$file_name" ]; then
   echo "$file_name file exists"
else
    echo "$file_name does not exists "
fi


echo "enter the year"
read year
if [ $((year % 4)) -eq 0 ] && [ $((year % 100)) -ne 0 -o $((year % 400)) -eq 0 ]; then
   echo "$year is leap year"
else
   echo "$year is not leap year"
fi